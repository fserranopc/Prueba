<?xml version="1.0"?>
<odoo>
     <record id="website_portal_dashboard_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">portal.dashnoard.res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Website Dashboard" string="Website Dashboard" data-key="bi_website_portal_dashboard" groups="website.group_website_designer">
                    <h2>Tablero del website</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_sale_chart"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_sale_chart"/>
                                <div class="text-muted">
                                    Mostrar el gráfico de análisis de ventas
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_purchase_chart"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_purchase_chart"/>
                                <div class="text-muted">
                                    Mostrar el gráfico de análisis de compras
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_invoice_chart"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_invoice_chart"/>
                                <div class="text-muted">
                                    Mostrar el gráfico de análisis de facturas
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_bill_chart"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_bill_chart"/>
                                <div class="text-muted">
                                    Mostrar el gráfico análisis de recibos
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_project_table"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_project_table"/>
                                <div class="text-muted">
                                    Mostrar proyectos y tareas 
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="no_records"/>
                                <div class="text-muted">
                                    Número de registros más recientes que desea mostrar en la tabla, como 5 o 10.
                                </div>
                                <field name="no_records"/>
                            </div>
                        </div>
                    </div>


                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_quotaion_table"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_quotaion_table"/>
                                <div class="text-muted">
                                    Mostrar las últimas cotizaciones en el panel del sitio web
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_so_table"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_so_table"/>
                                <div class="text-muted">
                                    Mostrar los últimos pedidos de venta en el panel del sitio web.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_rfq_table"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_rfq_table"/>
                                <div class="text-muted">
                                   Mostrar las ultimas solicitudes de presupuesto
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_po_table"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_po_table"/>
                                <div class="text-muted">
                                    Mostrar las últimas ordenes de compra en el panel del sitio web.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_invoice_table"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_invoice_table"/>
                                <div class="text-muted">
                                    Mostrar las últimas facturas en el panel del sitio web.
                                </div>
                            </div>
                        </div>                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="show_bill_table"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_bill_table"/>
                                <div class="text-muted">
                                    Mostrar los últimos recibos en el panel del sitio web.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>